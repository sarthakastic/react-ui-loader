{
  "name": "react-ui-loader",
  "version": "1.0.2",
  "description": "Loader and Shimmer developed with customizable UI options to add different elemnets in each.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs && webpack --mode production ",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "react",
    "shimmer",
    "loader",
    "load"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sarthakastic/react-ui-loader.git"
  },
  "bugs": {
    "url": "https://github.com/sarthakastic/react-ui-loader/issues"
  },
  "homepage": "https://github.com/sarthakastic/react-ui-loader",
  "author": "Sarthak Gupta",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.45",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.7.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "tsc-hooks": "^1.1.2",
    "tslib": "^2.6.2"
  }
}